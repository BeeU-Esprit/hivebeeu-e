<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #E6F7FF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.PaiementController">
    <Button layoutX="20" layoutY="20" onAction="#goBack" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Back" />

    <VBox alignment="CENTER" layoutX="191.0" layoutY="-18.0" prefHeight="810.0" prefWidth="346.0" spacing="20">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Gestion des Paiements" />

        <VBox prefHeight="498.0" prefWidth="480.0" spacing="20">
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="ID Commande:" />
            <TextField fx:id="paiementCommandeId" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="ID Utilisateur:" />
            <TextField fx:id="paiementUtilisateurId" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="Montant:" />
            <TextField fx:id="paiementMontant" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="Mode de Paiement:" />
            <ComboBox fx:id="paiementMode" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="Date de Paiement:" />
            <DatePicker fx:id="paiementDate" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
            <Label style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI';" text="Statut:" />
            <ComboBox fx:id="paiementStatus" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
        </VBox>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#effectuerPaiement" style="-fx-background-color: #f6bf32; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Effectuer Paiement" />
            <Button onAction="#modifierPaiement" style="-fx-background-color: #32a852; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Modifier" />
            <Button onAction="#supprimerPaiement" style="-fx-background-color: #d33; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Supprimer" />
        </HBox>

        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Liste des Commandes Disponibles:" />
        <ListView fx:id="commandeListView" prefHeight="28.0" prefWidth="400.0" style="-fx-font-family: 'Segoe UI';" />

        <Label style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Liste des Paiements:" />
        <ListView fx:id="paiementList" prefHeight="28.0" prefWidth="400.0" style="-fx-font-family: 'Segoe UI';" />
    </VBox>
</AnchorPane>
