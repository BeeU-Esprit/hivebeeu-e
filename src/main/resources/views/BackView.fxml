<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.BackController">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Gestion des Paiements" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <ListView fx:id="paiementListView" prefHeight="200" prefWidth="300" />

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="validerPaiementButton" text="Valider" onAction="#validerPaiement" />
                <Button fx:id="rejeterPaiementButton" text="Rejeter" onAction="#rejeterPaiement" />
            </HBox>

            <Button fx:id="backButton" text="Retour" onAction="#goToBackInterface" />
        </VBox>
    </children>
</AnchorPane>
