    <Button fx:id="test" layoutX="20" layoutY="20" onAction="#goBack" style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" text="Back" />


    <VBox alignment="CENTER" layoutX="200.0" layoutY="59.0" spacing="20">
