<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.pidev.Controllers.ListCommande">
    <children>
        <TableView fx:id="commandeTableView" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="produit" text="Produit" />
                <TableColumn fx:id="date_commandeColumn" text="Date Commande" />
                <TableColumn fx:id="quantite" text="Quantité" />
                <TableColumn fx:id="prix" text="Prix" />
                <TableColumn fx:id="total" text="Total" />
                <TableColumn fx:id="statutColumn" text="Statut" />
            </columns>
        </TableView>
        <Button fx:id="detailsButton" layoutX="14.0" layoutY="320.0" mnemonicParsing="false" onAction="#detailsCommande" text="Détails" />
        <Button fx:id="exportButton" layoutX="120.0" layoutY="320.0" mnemonicParsing="false" onAction="#exportPDF" text="Exporter PDF" />
        <Button fx:id="statButton" layoutX="230.0" layoutY="320.0" mnemonicParsing="false" onAction="#statButton" text="Statistiques" />
    </children>
</AnchorPane>
